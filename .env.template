# OncoPurpose Backend Configuration

# OpenAI API Key (Set this in your deployment environment variables)
OPENAI_API_KEY=your_openai_api_key_here

# Environment
ENVIRONMENT=production

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=oncopurpose
MYSQL_USER=oncopurpose_user
MYSQL_PASSWORD=oncopurpose_pass
DATABASE_URL=mysql+pymysql://oncopurpose_user:oncopurpose_pass@localhost:3306/oncopurpose

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5500,http://127.0.0.1:5500

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# API Keys (if needed for external services)
OPENAI_API_KEY=your_openai_key_here
PUBMED_API_KEY=your_pubmed_key_here

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Output Storage
OUTPUT_DIR=./outputs
MAX_OUTPUT_SIZE_MB=100
